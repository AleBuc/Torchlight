<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <Tab closable="false" text="Event">
        <VBox>
            <BorderPane>
                <top>
                    <Label text="Key" BorderPane.alignment="CENTER_LEFT">
                        <padding>
                            <Insets bottom="5" left="10" top="5" />
                        </padding>
                    </Label>
                </top>
                <center>
                    <TextArea fx:id="keyTextField" editable="false" prefHeight="200.0" prefWidth="200.0">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </TextArea>
                </center>

            </BorderPane>
            <BorderPane VBox.vgrow="ALWAYS">
                <top>
                    <Label text="Value" BorderPane.alignment="CENTER_LEFT">
                        <padding>
                            <Insets bottom="5" left="10" top="15" />
                        </padding>
                    </Label>
                </top>
                <center>
<!--                    <TextArea fx:id="valueTextField" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">-->
                    <TextArea fx:id="valueTextField" editable="false" prefWidth="200.0">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </TextArea>
                </center>
            </BorderPane>
        </VBox>
    </Tab>
    <Tab closable="false" text="Headers">
        <TextArea fx:id="headersTextField" editable="false" prefHeight="200.0" prefWidth="200.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </TextArea>
    </Tab>
</TabPane>
